{
  "name": "yamada",
  "version": "0.4.0",
  "description": "Image viewer for making happy.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "copy": "cpx '{*.html,package.json,*.png,*.css}' dist",
    "build": "npm-run-all -s clean copy build:renderer build:main",
    "build:renderer": "browserify index.js --im -o ./dist/index.js",
    "build:main": "browserify main.js --im --no-detect-globals --node -o ./dist/main.js",
    "release:osx": "electron-packager ./dist yamada --out=./release --platform=darwin --arch=x64 --version=0.37.5 --overwrite --asar --icon=./res/yamada.icns",
    "release:win": "electron-packager ./dist yamada --out=./release --platform=win32 --arch=x64 --version=0.37.5 --overwrite --asar --icon=./res/yamada.icon",
    "release": "npm-run-all -s build release:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akameco/yamada.git"
  },
  "keywords": [
    "electron",
    "image",
    "viewer"
  ],
  "author": "akameco <akameco.t@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akameco/yamada/issues"
  },
  "homepage": "https://github.com/akameco/yamada#readme",
  "dependencies": {
    "array-includes": "^3.0.2",
    "chokidar": "^1.4.3",
    "electron-json-storage": "^2.0.0",
    "lodash.shuffle": "^4.0.0",
    "meow": "^3.7.0"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "cpx": "^1.3.1",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^0.37.7",
    "npm-run-all": "^1.8.0",
    "rimraf": "^2.5.2",
    "xo": "*"
  },
  "xo": {
    "env": [
      "node",
      "browser"
    ]
  }
}
