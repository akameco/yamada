{
  "name": "yamada",
  "version": "0.5.1",
  "description": "Image viewer for making happy.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "copy": "cpx 'package.json' dist && cpx './src/{*.html,*.png,*.css}' dist",
    "copy:sh": "cp yamada.sh release/yamada-darwin-x64/yamada.app/Contents/Resources/",
    "build": "npm-run-all -s clean copy build:renderer build:main",
    "build:renderer": "browserify ./src/browser.js --im -o ./dist/browser.js",
    "build:main": "browserify ./src/index.js -t [ envify --NODE_ENV production ] --im --no-detect-globals --node -o ./dist/index.js",
    "release:osx": "electron-packager ./dist yamada --out=./release --platform=darwin --arch=x64 --version=0.37.8 --overwrite --asar --icon=./res/yamada.icns",
    "release:win": "electron-packager ./dist yamada --out=./release --platform=win32 --arch=x64 --version=0.37.8 --overwrite --asar --icon=./res/yamada.icon",
    "release": "npm-run-all -s build release:* copy:sh",
    "test": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akameco/yamada.git"
  },
  "keywords": [
    "electron",
    "image",
    "viewer"
  ],
  "author": "akameco <akameco.t@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akameco/yamada/issues"
  },
  "homepage": "https://github.com/akameco/yamada#readme",
  "dependencies": {
    "array-includes": "^3.0.2",
    "chokidar": "^1.4.3",
    "command-installer": "^0.2.2",
    "lodash.shuffle": "^4.0.0",
    "minimist": "^1.2.0",
    "redux": "^3.5.2",
    "redux-saga": "^0.10.2"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "cpx": "^1.3.1",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^0.37.8",
    "envify": "^3.4.0",
    "npm-run-all": "^2.0.0",
    "rimraf": "^2.5.2",
    "xo": "^0.15.0"
  },
  "xo": {
    "esnext": true,
    "env": [
      "node",
      "browser"
    ]
  }
}
